<link webc:scoped rel="stylesheet" href="/css/inputs.css">
<div class="text-input-flex-wrapper">
<label :for="uid"><slot></slot><span webc:if="required" aria-hidden="true">*</span></label>
<input type="text" :id="uid" :inputmode="inputmode" :name="name" :autocomplete="autocomplete" :aria-required="{if(required){true}}" :aria-describedby="{if((required)||(helper)){`${uid}-adb`}}">
</div>
<div webc:if="helper || required" class="validation-and-helper-container" :id="`${uid}-adb`">
<div webc:if="required" class="validation-feedback"></div>
<div webc:if="helper" class="helper-text" @text="helper"></div>
</div>