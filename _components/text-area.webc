<link rel="stylesheet" href="/css/inputs.css">
<div class="textarea-container">
<label :for="uid"><slot></slot><span webc:if="required" aria-hidden="true">*</span></label>
<textarea :id="uid" :name="name" :aria-required="{if(required){true}}" :aria-describedby="{if((required)||(helper)){`${uid}-adb`}}"></textarea>
<helper-and-error webc:if="required || helper" :@required="required" :@helper="helper" :@idpass="uid"></error-and-helper>
</div>