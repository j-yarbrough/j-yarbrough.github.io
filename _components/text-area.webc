<link webc:scoped rel="stylesheet" href="/css/inputs.css">
<label :for="uid"><slot></slot><span webc:if="required" aria-hidden="true">*</span></label>
<textarea :id="uid" :name="name" :aria-required="{if(required){true}}" :aria-describedby="`${uid}-adb`"></textarea>
<div class="validation-and-helper-container" :id="`${uid}-adb`">
<div class="validation-feedback"></div>
<div webc:if="helper" class="helper-text" @text="helper"></div>
</div>